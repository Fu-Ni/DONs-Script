-- ===== libs ===== --
local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo.."Library.lua"))()

-- ===== notify + clipboard ===== --
local invite = "https://discord.gg/3NjyJjjXxF"
setclipboard(invite)
Library:Notify("Join our Discord for scripts", 3)

-- ===== window ===== --
local Window = Library:CreateWindow({
    Title = "DON's Script Hub",
    Icon = 95816097006870,
    NotifySide = "Right",
    ShowCustomCursor = true,
})

local Tabs = {
    Info = Window:AddTab("Info","info"),
    ["UI Settings"] = Window:AddTab("UI Settings","settings"),
}

-- ===== Info ===== --
local SupportGroup = Tabs.Info:AddLeftGroupbox("Supported Games","list")
SupportGroup:AddLabel("üèÄ„Üçbasketball-legends")
