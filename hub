SupportGroup:AddLabel("üïØÔ∏è„Üçviolence-district")
SupportGroup:AddLabel("üèê„Üçvolleyball-legends")

local InfoGroup = Tabs.Info:AddRightGroupbox("Join Discord","help")
InfoGroup:AddLabel("üîó https://discord.gg/3NjyJjjXxF")
InfoGroup:AddButton("Join Discord", function()
    setclipboard(invite)
    Library:Notify("Discord link copied", 3)
end)

-- ===== UI Settings ===== --
local MenuGroup = Tabs["UI Settings"]:AddLeftGroupbox("Menu","wrench")
MenuGroup:AddButton("Unload UI", function()
    Library:Unload()
end)
